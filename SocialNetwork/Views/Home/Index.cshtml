﻿@using Microsoft.AspNetCore.Identity;
@using SocialNetwork.Models.Users;
@using SocialNetwork.ViewModels;
@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager;

@model SocialNetwork.ViewModels.Account.MainViewModel;

@{
    ViewData["Title"] = "Home Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@if (SignInManager.IsSignedIn(User))
{
    <div>Hello @User.Identity!</div>
}
else
{
    <div class="row">
        <div class="side">
            <div class="center">
                Пользуйтесь нашей самой крутой соцсетью! Регистрируйтесь, общайтесь, делитесь мыслями, находите новых друзей.
            </div>
            <img class="main-img" src="https://clipart-library.com/img1/1617972.jpg" />
        </div>
        <div class="main">
            <partial name="Login" model="Model.LoginView"/>
            <partial name="Register" model="Model.RegisterView"/>
        </div>
    </div>
}
